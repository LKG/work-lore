<script type="text/javascript" id="city-picker-span" >
<span class="city-picker-span" style="min-width:360px;line-height:33px;">
 	<span class="placeholder" style="display: none;">请选择省/市/区</span>
 	<span class="title">
 	<span class="select-item" data-count="province" data-code="{{province.code}}">{{province.name}}</span>/<span class="select-item" data-count="city" data-code="{{city.code}}">{{city.name}}</span>/<span class="select-item" data-count="district" data-code="{{district.name}}">{{district.name}}</span>
 	</span>
 	<i class="arrow fa fa-angle-down"></i>
 </span>
 </script>